    "classnames": "^2.2.6",
    "parcel-bundler": "^1.12.4",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.8.3",
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1"
  }
}
